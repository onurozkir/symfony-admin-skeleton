{% extends 'base.html.twig' %}
{% block body %}
    <section class="content-header"><h1>{{ page_header.page_header }}{% set childUrl = page_header.href|split('/') %}{% if childUrl|length >= 3 %}<small>> {{ page_header.herePage }}</small>{% endif %}</h1>
        <ol class="breadcrumb">
            <li>
                <a href="{{ page_header.href }}"><i class="fa fa-dashboard"></i>{{ page_header.level }}</a>
            </li>
            <li class="active">{{ page_header.herePage }}</li>
        </ol>
    </section>
    <section class="content container-fluid">
        <a href="javascript:history.back();" class="btn btn-small btn-primary pull-right"><i class="icon-arrow-left icon-white"></i> Geri</a>
        <hr>

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Haber DÃ¼zenleme Formu</h3>
                    </div>

                    <!-- /.box-header -->
                    <!-- form start -->
                    {{ form_start(form, { 'method': 'POST' }) }}
                    {{ form_errors(form) }}

                    <div class="box-body">
                        {{ form_row(form.title, {'label' : 'Title : '}) }}
                        {{ form_row(form.tags, {'label' : 'Categories : '}) }}
                        {{ form_row(form.description, {'label' : 'Description : '}) }}
                        {{ form_row(form.seoTitle) }}
                        <p class="help-block">Example block-level help text here.</p>
                        {{ form_row(form.seoKeywords) }}
                        <p class="help-block">Example block-level help text here.</p>
                        {{ form_row(form.seoDescription) }}
                        <p class="help-block">Example block-level help text here.</p>
                        <label for="newsImage">Mevcut Logo</label><br>
                        <img src="{{ asset('assets/uploads/images/' ~ newsImage) }}" class="img-thumbnail" width="200" height="175" />
                        {{ form_row(form.imageUrl) }}
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        {{ form_row(form.save, { 'label': 'Kaydet', 'attr': { 'style': 'margin-top:10px;'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
    <script src="//cdn.ckeditor.com/4.7.1/standard/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".tags").select2();
        });
    </script>
{% endblock %}